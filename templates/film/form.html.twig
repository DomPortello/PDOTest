{% extends 'base.html.twig' %}


{% block body %}
    <div>
        <h2>Ajout d'un film</h2>
        <form class="row g-3 justify-content-center align-items-center" name="myForm" action="../../src/Controller/film/FormFilmController.php" method="post">
            <div class="col-4">
                <label for="inputName2" class="form-label">Nom du film</label>
                <input type="text" class="form-control" id="inputName2" name="filmName">
            </div>
            <div class="col-4">
                <label class="form-label" for="selectdemerde"> </label>
                <select class="form-select" id="selectdemerde" name="filmType" aria-label="Default select example">
                    <option selected>Genre</option>
                    {% for type in types %}
                        <option value="{{ type.type }}">{{ type.type }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-4">
                <label for="inputEmail4" class="form-label">Date de sortie</label>
                <input type="date" class="form-control" id="inputEmail4" name="publishedAt">
            </div>
            <div>
                <label for="inputDesc" class="form-label">Description</label>
                <textarea class="form-control" id="inputDesc" name="filmDesc"></textarea>
            </div>
            <div>
                <button type="submit" class="mt-4 btn btn-primary">Ajouter</button>
            </div>
        </form>
    </div>



{% endblock body %}